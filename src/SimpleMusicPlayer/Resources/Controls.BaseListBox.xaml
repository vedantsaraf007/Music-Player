<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:core="clr-namespace:SimpleMusicPlayer.Core">

    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="pack://application:,,,/MahApps.Metro;component/Styles/Controls.ListBox.xaml" />
    </ResourceDictionary.MergedDictionaries>

    <Style x:Key="BaseMetroListBox"
           BasedOn="{StaticResource MahApps.Styles.ListBox.Virtualized}"
           TargetType="core:BaseListBox">
        <Setter Property="FocusVisualStyle" Value="{x:Null}" />
        <Setter Property="IsTextSearchEnabled" Value="False" />
    </Style>

</ResourceDictionary>